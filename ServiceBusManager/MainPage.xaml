<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServiceBusManager.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!-- Image -->
            <Image
                Source="logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Placeholder image" />

            <!-- Seach -->
            <SearchBar></SearchBar>

                <!-- Labels -->
            <Label
                Text="Headline Label"
                Style="{StaticResource Headline}" />
            <Label
                Text="Subheadline Label"
                Style="{StaticResource SubHeadline}" />
            <Label
                Text="Regular Label"
                FontSize="14" />

            <!-- Button -->
            <Button
                Text="Primary Button"
                HorizontalOptions="Fill" />

            <!-- Entry -->
            <Entry
                Placeholder="Enter text here"
                Text="Sample text" />

            <!-- Editor -->
            <Editor
                Placeholder="Enter multi-line text here"
                Text="Sample multi-line text" />

            <!-- CheckBox -->
            <CheckBox
                IsChecked="True" />

            <!-- RadioButton -->
            <RadioButton
                Content="Option 1"
                IsChecked="True" />
            <RadioButton
                Content="Option 2" />

            <!-- Switch -->
            <Switch
                IsToggled="True" />

            <!-- Slider -->
            <Slider
                Minimum="0"
                Maximum="100"
                Value="50" />

            <!-- ProgressBar -->
            <ProgressBar
                Progress="0.5" />

            <!-- Picker -->
            <Picker
                Title="Select an option">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Option 1</x:String>
                        <x:String>Option 2</x:String>
                        <x:String>Option 3</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>


            <!-- TimePicker -->
            <TimePicker
                Time="12:00:00" />

            <DatePicker/>

            <!-- ListView -->
            <ListView>
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Item 1</x:String>
                        <x:String>Item 2</x:String>
                        <x:String>Item 3</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>

            <!-- Frame -->
            <Frame>
                <Label Text="This is a frame" />
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>