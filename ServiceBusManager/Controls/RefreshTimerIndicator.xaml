<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServiceBusManager.Controls.RefreshTimerIndicator"
             x:Name="Root">
    <ProgressBar Progress="{Binding Progress, Source={x:Reference Root}}"
                 ProgressColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                 BackgroundColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray300}}"
                 HeightRequest="{Binding Height, Source={x:Reference Root}}"
                 WidthRequest="{Binding Width, Source={x:Reference Root}}" />
</ContentView> 