<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ServiceBusManager.ViewModels"
             x:Class="ServiceBusManager.Views.DetailsView"
             x:DataType="vm:MainViewModel">

    <VerticalStackLayout Spacing="16" 
                        Padding="16"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
        
        <Label Text="Resource Details" 
               FontSize="20" 
               FontAttributes="Bold"/>
        
        <Frame Padding="16" 
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}">
            <VerticalStackLayout Spacing="8">
                <Label Text="{Binding SelectedResource.Name}" 
                       FontSize="18" 
                       FontAttributes="Bold"/>
                
                <Label Text="{Binding SelectedResource.Type}" 
                       FontSize="14"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
                
                <Label Text="{Binding SelectedResource.Status}" 
                       FontSize="14"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
                
                <Label Text="{Binding SelectedResource.Location}" 
                       FontSize="14"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
                
                <Label Text="{Binding SelectedResource.ResourceGroup}" 
                       FontSize="14"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView> 